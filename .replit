run = "npm run dev"
entrypoint = "index.js"
hidden = [".config", "package-lock.json", ".next", ".swc"]
modules = ["nodejs-22", "postgresql-16"]

[nix]
channel = "stable-24_11"

[env]
NEXT_TELEMETRY_DISABLED = "1"

[deployment]
run = ["sh", "-c", "TASK_TYPE=all node scripts/cron-tasks.js"]
deploymentTarget = "scheduled"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42243
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Run"
author = 42313041
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd animal-rescue-donations && npm run dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd animal-rescue-donations && npm run dev -- --port 5000 --hostname 0.0.0.0"
waitForPort = 5000

[agent]
expertMode = true
